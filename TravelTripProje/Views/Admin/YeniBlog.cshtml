@model TravelTripProje.Models.Siniflar.Blog

@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Blog Ekleme İşlemi</h2>
<br/>
<form method="post" class="form-group">
    <b>@Html.LabelFor(x => x.Baslik) </b> 
    @Html.TextBoxFor(x=>x.Baslik,new{@class="form-control"})
    <br/>
    <b>@Html.LabelFor(x => x.Tarih) </b> 
    @Html.TextBoxFor(x=>x.Tarih,new{@class="form-control"})
    <br/>
    <b>@Html.LabelFor(x => x.BlogImage) </b> 
    @Html.TextBoxFor(x=>x.BlogImage,new{@class="form-control"})
    <br/>
    <b>@Html.LabelFor(x => x.Aciklama) </b> 
    @Html.TextAreaFor(x=>x.Aciklama,new{@class="form-control"})
    <br/>
    <button class="btn btn-primary">Blog Ekle</button>

</form>