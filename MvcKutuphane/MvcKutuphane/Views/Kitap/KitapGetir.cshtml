@model MvcKutuphane.Models.Entity.TblKitap
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ID)
    @Html.LabelFor(x => x.AD)
    @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.KATEGORI)
    @Html.DropDownListFor(x => x.TblKategori.ID, (List<SelectListItem>)ViewBag.dgr1,
        new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.YAZAR)
    @Html.DropDownListFor(x => x.TblYazar.ID, (List<SelectListItem>)ViewBag.dgr2,
        new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BASIMYIL)
    @Html.TextBoxFor(x => x.BASIMYIL, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.YAYINEVI)
    @Html.TextBoxFor(x => x.YAYINEVI, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.SAYFA)
    @Html.TextBoxFor(x => x.SAYFA, new { @class = "form-control" })
    <br />
    <input type="hidden" name="DURUM" value="True" />
    <button class="btn btn-primary">Yazar Güncelle</button>
}



