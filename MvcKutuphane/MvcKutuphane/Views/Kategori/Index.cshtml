@using MvcKutuphane.Models.Entity
@model List<TblKategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategoriler</h2>
<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD</td>
            <td>
                @*<a href="/Kategori/KategoriSil/@x.ID" class="btn btn-danger">SİL</a>*@
            <form action="/Kategori/KategoriSil/@x.ID">
                <button class="btn btn-danger" id="BtnSil">Sil</button>
            </form>
        </td>
        <td><a href="/Kategori/KategoriGetir/@x.ID" class="btn btn-success">GÜNCELLE</a></td>
    </tr>
}
</table>
<a href="/Kategori/KategoriEkle/" class="btn btn-primary">Yeni Kategori Ekle</a>


