@model MvcKutuphane.Models.Entity.TblHareket
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<form method="post" class="form-group">
    
    @Html.Label("ÜYE ID")
    @*@Html.TextBoxFor(x => x.UYE, new { @class = "form-control" })*@
    @Html.DropDownListFor(x=>x.TblUyeler.ID,(List<SelectListItem>)ViewBag.dgr1,new{@class="form-control"})
    <br />
    @Html.Label("KİTAP ID")
    @*@Html.TextBoxFor(x => x.KITAP,
        new { @class = "form-control" })*@
    @Html.DropDownListFor(x=>x.TblKitap.ID,(List<SelectListItem>)ViewBag.dgr2,new{@class="form-control"})
    <br />
    @Html.Label("PERSONEL ID")
    @*@Html.TextBoxFor(x => x.PERSONEL,
        new { @class = "form-control" })*@
    @Html.DropDownListFor(x=>x.TblPersonel.ID,(List<SelectListItem>)ViewBag.dgr3,new{@class="form-control"})
    <br />
    @Html.Label("KİTAP ALIŞ TARİHİ")
    <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()"/>
    <br />
    @Html.Label("KİTAP İADE TARİHİ")
<input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(7).ToShortDateString()"/>
    <br />
    <button class="btn btn-primary">Kitabı Ödünç Ver</button>
    <input type="hidden" value="False" name="ISLEMDURUM"/>
</form>



