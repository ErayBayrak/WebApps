@model MvcKutuphane.Models.Entity.TblPersonel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Personel Ekleme Sayfası</h2>

@using (Html.BeginForm("PersonelEkle", "Personel", FormMethod.Post))
{
    @Html.LabelFor(x=>x.PERSONEL)
    @Html.TextBoxFor(x=>x.PERSONEL,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.PERSONEL,"",new{@style="color:red;"})
    <br/><br/>
    <button class="btn btn-primary">Personel Ekle</button>
}