@using MvcKutuphane.Models.Entity
@model List<TblDuyurular>
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2>Duyurular</h2>

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ</th>
        <th>TARİH</th>
        <th>İÇERİK</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.KATEGORI</td>
    <td>@Convert.ToDateTime(x.TARIH).ToString("dd/MM/yyyy")</td>
    <td>@x.ICERIK</td>
</tr>
    }
</table>


