@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-dark table-hover table-striped text-center">
    <tr>
        <th>ID</th>
        <th>DEPARTMAN</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.DepartmanID</td>
            <td>@x.DepartmanAd</td>
            <td><a href="/Departman/DepartmanSil/@x.DepartmanID" class="btn btn-block btn-danger">SİL</a></td>
            <td><a href="/Departman/DepartmanGetir/@x.DepartmanID" class="btn btn-block btn-success">GÜNCELLE</a></td>
            <td><a href="/Departman/DepartmanDetay/@x.DepartmanID" class="btn btn-block btn-secondary">DETAYLAR</a></td>
        </tr>
    }
</table>
<a href="/Departman/DepartmanEkle/" class="btn btn-primary">Departman Ekle</a>

