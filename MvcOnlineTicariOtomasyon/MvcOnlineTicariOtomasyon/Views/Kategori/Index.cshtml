@using MvcOnlineTicariOtomasyon.Models.Siniflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table-dark text-center" @*style="margin-top:20px;*@">

    <tr>
        <th>KATEGORİ</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.KateogoriAd</td>
            <td><a href="/Kategori/KategoriSil/@x.KategoriID" class="btn btn-block btn-danger">SİL</a></td>
            <td><a href="/Kategori/KategoriGetir/@x.KategoriID" class="btn btn-block btn-success">GÜNCELLE</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new{sayfa}))
<a class="btn btn-primary btn-block" href="/Kategori/KategoriEkle/"><b>Kategori Ekle</b></a>

