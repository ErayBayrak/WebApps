@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cari>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-dark table-striped table-hover text-center">
    <tr>
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>ŞEHİR</th>
        <th>MAİL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CariID</td>
            <td>@x.CariAd</td>
            <td>@x.CariSoyad</td>
            <td>@x.CariSehir</td>
            <td>@x.CariMail</td>
            <td><a href="/Cari/CariSil/@x.CariID" class="btn btn-block btn-danger">SİL</a></td>
            <td><a href="/Cari/CariGetir/@x.CariID" class="btn btn-block btn-success">GÜNCELLE</a></td>
            <td><a href="/Cari/MusteriSatis/@x.CariID" class="btn btn-block btn-info">SATIŞ GEÇMİŞİ</a></td>
        </tr>
    }
</table>
<a href="/Cari/CariEkle/" class="btn btn-primary">Cari Ekle</a>