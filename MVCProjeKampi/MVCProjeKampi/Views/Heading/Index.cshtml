@using EntityLayer
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    string color = "";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    
        <!-- Navbar -->
        
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        

        <!-- Content Wrapper. Contains page content -->
       
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Başlıklar</h1>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Başlık İşlemleri</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped projects">
                            <thead>
                                <tr>
                                    <th style="width: 1%">
                                        #
                                    </th>
                                    <th style="width: 20%">
                                        Başlık Adı
                                    </th>
                                    <th style="width: 15%">
                                        Oluşturan Yazar
                                    </th>
                                    <th style="width: 10%">
                                        Durum
                                    </th>
                                    <th style="width: 8%" class="text-center">
                                        Kategori
                                    </th>
                                    <th style="width: 20%">
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                switch (item.CategoryID)
                                        {
                                            case 1:
                                                color = "badge badge-success";
                                                break;
                                            case 2:
                                                color = "badge badge-danger";
                                                break;
                                            case 3:
                                                color = "badge badge-primary";
                                                break;
                                            case 4:
                                                color = "badge badge-dark";
                                                break;
                                            case 5:
                                                color = "badge badge-secondary";
                                                break;
                                            case 6:
                                                color = "badge badge-info";
                                                break;
                                        }
                                <tr>
                                    <td>
                                        @item.HeadingID
                                    </td>
                                    <td>
                                        <a>
                                            @item.HeadingName
                                        </a>
                                        <br/>
                                        <small>
                                           @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"))    @* @item.HeadingDate.ToShortDateString() *@
                                        </small>
                                    </td>
                                    <td>
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                            </li>
                                        </ul>
                                    </td>
                                    <td>
                                        @if (item.HeadingStatus == true)
                                        {
                                            <badge class="badge badge-primary">Aktif</badge>
                                        }
                                        else
                                        {
                                            <badge class="badge badge-danger">Pasif</badge>
                                        }
                                    </td>
                                    <td class="project-state">
                                        <span class="@color">@item.Category.CategoryName</span>
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                            <i class="fas fa-folder">
                                            </i>
                                            İçerik
                                        </a>
                                        <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@item.HeadingID">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Düzenle
                                        </a>
                                        @if (item.HeadingStatus == true)
                                        {
                                            <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading/@item.HeadingID">
                                                <i class="fas fa-trash">
                                                </i>
                                                Pasif Yap
                                            </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-primary btn-sm" href="/Heading/DeleteHeading/@item.HeadingID">
                                                <i class="fas fa-trash">
                                                </i>
                                                Aktif Yap
                                            </a>
                                        }
                                    </td>
                                </tr>

                            }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </section>
            <!-- /.content -->
</body>
</html>
