@using EntityLayer
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>KATEGORİ ADI</th>
                <th>AÇIKLAMA</th>
                <th>SİL</th>
                <th>GÜNCELLE</th>
                <th>BAŞLIKLAR</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryDescription</td>
                    <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">SİL</a></td>
                    <td><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-success">GÜNCELLE</a></td>
                    <td><a href="#" class="btn btn-primary">BAŞLIKLAR</a></td>
                    
                </tr>
            }
        </tbody>
    </table>
    <a href="/AdminCategory/AddCategory/" class="btn btn-dark">Yeni Kategori Ekle</a>
</div>

